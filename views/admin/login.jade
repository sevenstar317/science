extends layout

block contentHead
	script( type="text/javascript" src="/js/validator.min.js" )
	script( type="text/javascript" src="/js/admin-login.js" )

block content
	form.form-350( enctype="multipart/form-data" )
		h2.form-header.text-muted Administrator
		
		//a.btn.btn-lg.btn-primary(href="/auth/facebook") Login via Facebook
		//a.btn.btn-lg.btn-primary(href="/auth/google") Login via Google
		
		div#alert-block

		div.form-group
			input#name.form-control( type="text" placeholder="Admin Name" name="name" pattern="(.)*[^ ](.)*" autofocus required )
		div.form-group
			input#password.form-control( type="password" placeholder="Password" name="password" required )

		div.signin-btnset.center
			a.btn.btn-lg.btn-primary( href="#" onclick="loginAdmin()" ) Log In

	div#wait.hidden
		p.wait-mark.label.label-success
			sapn.wait-animate.glyphicon.glyphicon-refresh.glyphicon-refresh-animate
			| &nbsp;&nbsp;Please wait...

