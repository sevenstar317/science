doctype html
html( lang="en" )
	head
		meta( charset = "UTF-8" )
		meta( name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=no" )
		
		title ScienceIsFun
		link( rel="shortcut icon" href="/images/favicon.png" )
		link( href="https://fonts.googleapis.com/css?family=Maven+Pro:400,700", rel="stylesheet", type='text/css' )
		<link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
		link( href="/css/bootstrap.min.css", rel="stylesheet", media="screen" )
		link( href="/css/owl.carousel.css", rel="stylesheet", media="screen" )
		link( href="/css/owl.transitions.css", rel="stylesheet", media="screen" )
		link( href="/css/index.css", rel="stylesheet", media="screen" )
		link( href="/css/font-awesome.css", rel="stylesheet", media="screen" )
		script( src="/js/jquery-2.0.3.min.js" )
		script( src="/js/bootstrap.min.js" )
		script( src="/js/layout.js" )
		block contentHead
	body.collapsed
		div#wrapper
			div.header.navbar
				div.container-fluid

					div.navbar-header
						- if (!isCurrentPage('/signin') && !isCurrentPage('/grades') && !isCurrentPage('/signup') && !isCurrentPage('/forgotPassword'))
							button#nav-toggle-btn(type="button")
								span.icon-bar
								span.icon-bar
								span.icon-bar
						a.logo.navbar-brand(href="/")
							img(src="/images/logo.png" alt="Logo")
					div#navbar-menu.collapse.navbar-collapse
						ul.nav.navbar-nav.navbar-right
							- if ( !userid )
								li#menu-user
									a.menu-user.dropdown-toggle( data-toggle="dropdown" )
										img#guest_photo.user-photo( src="/images/guest.png" )
										p.user-info
											span#guest_name.user-name Guest
											span.caret
									ul.dropdown-menu( role="menu" )
										li( role="presentation" )
											a#guest_link( role="menuitem" tabindex="-1" target="_blank") View Profile
										li( role="presentation" )
											a( href="/signin" role="menuitem" tabindex="-1" ) Sign in
							- else
								li#menu-user
									a.menu-user(href="/profile/view")
										- if (userphoto)
											img.user-photo( src=userphoto )
										- else
											img.user-photo( src="/images/guest.png" )
										p.user-info
											span.user-name=username
											br
											span.user-school=user.grade + ' ' + user.school_name
							- endif
							
			block content
		div.footer.container
			ul.footer-links
				li
					a( href="/about" ) About
				li
					a( href="/terms" ) Terms
				li
					a( href="/privacy" ) Privacy
			p 2015 &copy; Copyright. Science is Fun. All Rights Reserved.
		script.
			var global_userid = '#{userid}';
			var guest = {
					'name': '#{guest.name}',
					'photo': '#{guest.photo}'
				};
			var usertype = '#{usertype}';
		block contentScript

		- if (scientists && scientists.length >= 1)
			script.
				scientists = !{JSON.stringify(scientists)};
		- endif
		
		
		
